<h1>All Articles</h1>

<ul id="articles">
    <% @articles.each do |article| %>
        <% if logged_in? %>
            <li>
                <%= link_to article.title, article_path(article) %>
            </li>
        <% else %>
            <li>
                <%= article.title %>
            </li>
        <% end %>
    <% end %>
</ul>

<% if logged_in? %>
    <%= link_to "Create a New Article", new_article_path, class: "new_article" %>
<% end %>
